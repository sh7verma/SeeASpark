<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvEventsHome"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_270sdp"
    android:layout_marginLeft="@dimen/_12sdp"
    android:layout_marginRight="@dimen/_12sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:background="@color/white_color"
    app:cardCornerRadius="@dimen/_12sdp"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/imgEventCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_avatar_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".9"
        android:background="@drawable/background_gradient" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_12sdp">

        <customviews.LightTextView
            android:id="@+id/txtEventNameCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_12sdp"
            android:text="New Event"
            android:textAllCaps="true"
            android:textColor="@color/white_color"
            android:textSize="@dimen/_14ssp" />

        <customviews.BoldTextView
            android:id="@+id/txtEventDescCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="48"
            android:paddingBottom="@dimen/_12sdp"
            android:text="@string/lorem_ipsum"
            android:textColor="@color/white_color"
            android:textSize="@dimen/_16ssp" />

        <customviews.LightTextView
            android:id="@+id/txtEventTimeCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday"
            android:textColor="@color/white_color"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>

    <customviews.BoldTextView
        android:id="@+id/txtEventExploreCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:background="@drawable/mentee_ripple"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingRight="@dimen/_16sdp"
        android:paddingTop="@dimen/_5sdp"
        android:text="@string/explore"
        android:textAllCaps="true"
        android:textSize="@dimen/_12ssp" />

</android.support.v7.widget.CardView>