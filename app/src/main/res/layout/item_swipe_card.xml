<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvCardUser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_12sdp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.6"
            android:gravity="bottom|center_horizontal"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgAvatarCard"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:src="@drawable/placeholder_image"
                android:transitionName="@string/transition_image" />

            <customviews.BoldTextView
                android:id="@+id/txtNameCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="@dimen/_16sdp"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:text="Victor Martin"
                android:layout_marginBottom="@dimen/_16sdp"
                android:textColor="@color/black_color"
                android:textSize="@dimen/_15ssp" />

            <customviews.MediumTextView
                android:id="@+id/txtProfessionCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingRight="@dimen/_8sdp"
                android:paddingTop="@dimen/_8sdp"
                android:text="Physician"
                android:visibility="gone"
                android:textColor="@color/white_color"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.4"
            android:gravity="center"
            android:orientation="vertical">

            <customviews.MediumTextView
                android:id="@+id/txtBioCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:text="Physician"
                android:textColor="@color/darkGreyText"
                android:textSize="@dimen/_12ssp" />

            <customviews.BoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_12sdp"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:text="@string/skills"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_16sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingStart="@dimen/_8sdp">

                <customviews.MediumTextView
                    android:id="@+id/txtSkillCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:background="@drawable/skill_card_outer"
                    android:padding="@dimen/_5sdp"
                    android:text="Lorim"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/_12ssp" />

                <customviews.MediumTextView
                    android:id="@+id/txtSkillCountCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/skill_card_outer"
                    android:padding="@dimen/_5sdp"
                    android:text="Lorim"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>