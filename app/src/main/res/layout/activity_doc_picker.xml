<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llOuterDoc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent_ripple"
            android:padding="@dimen/_12sdp"
            android:src="@mipmap/ic_back_b"
            android:textColor="@color/white_color" />

        <ImageView
            android:id="@+id/imgProfileAvatar"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:src="@mipmap/ic_avatar_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <customviews.BoldTextView
                android:id="@+id/txtSendDoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/select_document"
                android:textColor="@color/black_color"
                android:textSize="@dimen/_14ssp"
                android:transitionName="@string/transition" />

            <customviews.RegularTextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Active"
                android:visibility="gone"
                android:textColor="@color/textGrey"
                android:textSize="@dimen/_12ssp"
                android:transitionName="@string/transition" />

        </LinearLayout>

        <customviews.RegularTextView
            android:id="@+id/txtDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent_ripple"
            android:padding="@dimen/_5sdp"
            android:text="@string/done"
            android:visibility="gone"
            android:textColor="@color/black_color"
            android:textSize="@dimen/_12ssp"
            android:transitionName="@string/transition" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/view_line_color_orange">

    </FrameLayout>

</LinearLayout>
