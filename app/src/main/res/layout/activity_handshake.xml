<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transperent"
    android:orientation="vertical">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifHandshake"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp" />

    <LinearLayout
        android:id="@+id/llDataHandshake"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_16sdp"
        android:visibility="invisible"
        android:layout_marginRight="@dimen/_16sdp"
        android:background="@drawable/handshake_dialog_background"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|top"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgUserMatch1"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@mipmap/ic_avatar_1" />

                <ImageView
                    android:layout_width="@dimen/_104sdp"
                    android:layout_height="@dimen/_64sdp"
                    android:src="@drawable/hand" />

                <ImageView
                    android:id="@+id/imgUserMatch2"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@mipmap/ic_avatar_1" />
            </LinearLayout>
        </LinearLayout>

        <customviews.MediumTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_16sdp"
            android:text="@string/it_s_a_handshake"
            android:textAllCaps="true"
            android:textColor="@color/white_color"
            android:textSize="@dimen/_14ssp" />

        <customviews.LightTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLength="80"
            android:paddingBottom="@dimen/_48sdp"
            android:paddingLeft="@dimen/_16sdp"
            android:paddingRight="@dimen/_16sdp"
            android:text="@string/lorem_ipsum"
            android:textColor="@color/white_color"
            android:textSize="@dimen/_12ssp" />

        <customviews.MediumTextView
            android:id="@+id/txtStartChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mentee_ripple"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingLeft="@dimen/_24sdp"
            android:paddingRight="@dimen/_24sdp"
            android:paddingTop="@dimen/_8sdp"
            android:text="@string/start_chat"
            android:textAllCaps="true"
            android:textColor="@color/black_color"
            android:textSize="@dimen/_13ssp" />

        <customviews.MediumTextView
            android:id="@+id/txtExplore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha=".8"
            android:padding="@dimen/_16sdp"
            android:text="@string/explore"
            android:textAllCaps="true"
            android:textColor="@color/white_color"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:gravity="center_horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:src="@mipmap/ic_avatar_1"
                android:visibility="invisible" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="@dimen/_104sdp"
                android:layout_height="@dimen/_64sdp"
                android:scaleType="centerInside"
                android:visibility="invisible"
                android:src="@drawable/hand" />

            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:src="@mipmap/ic_avatar_1"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>