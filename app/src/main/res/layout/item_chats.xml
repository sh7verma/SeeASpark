<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llChatOuter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_default"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgProfileAvatar"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:src="@mipmap/ic_avatar_1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/_16sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <customviews.MediumTextView
                    android:id="@+id/txtCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="@string/mentee"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10ssp" />

                <customviews.MediumTextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/community"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/_14ssp" />

                <LinearLayout
                    android:id="@+id/llLastMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgLastMessageIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/_5sdp" />

                    <customviews.RegularTextView
                        android:id="@+id/txtLastMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:text="@string/lorem_ipsum"
                        android:maxLines="2"
                        android:textColor="@color/greyLine"
                        android:textSize="@dimen/_11ssp" />

                </LinearLayout>

                <customviews.RegularTextView
                    android:id="@+id/txtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/greyLine"
                    android:text="@string/event"
                    android:textSize="@dimen/_11ssp" />

            </LinearLayout>

            <customviews.MediumTextView
                android:id="@+id/txtUnreadCount"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:background="@drawable/grey_circle"
                android:gravity="center"
                android:textColor="@color/red_color"
                android:textSize="@dimen/_7ssp"
                android:visibility="invisible" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/greyLine" />

    </LinearLayout>

</LinearLayout>