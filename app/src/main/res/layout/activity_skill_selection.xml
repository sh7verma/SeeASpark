<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_24sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:background="@drawable/signup_gradient"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgBackSelection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/transparent_ripple"
                android:padding="@dimen/_12sdp"
                android:src="@mipmap/ic_back_black" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <customviews.MediumTextView
                android:id="@+id/txtClearLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_14ssp"
                android:text="@string/clear_all"
                android:textColor="@color/black_color"
                android:textSize="@dimen/_14ssp" />

        </LinearLayout>


        <customviews.BoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_16sdp"
            android:text="@string/select_preferred_skills"
            android:textColor="@color/black_color"
            android:textSize="@dimen/_24ssp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <customviews.FlowLayout
                android:id="@+id/flSkillsSelection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16sdp"
                android:gravity="left" />
        </ScrollView>

    </LinearLayout>

    <customviews.MediumTextView
        android:id="@+id/txtDonePreferLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_36sdp"
        android:background="@drawable/mentee_ripple"
        android:elevation="@dimen/_3"
        android:paddingBottom="@dimen/_8sdp"
        android:paddingLeft="@dimen/_24sdp"
        android:paddingRight="@dimen/_24sdp"
        android:paddingTop="@dimen/_8sdp"
        android:text="@string/done"
        android:textAllCaps="true"
        android:textColor="@color/black_color"
        android:textSize="@dimen/_14ssp" />


</RelativeLayout>