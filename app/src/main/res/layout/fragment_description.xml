<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_color"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_24sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:background="@drawable/signup_gradient">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_260sdp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgBackDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transparent_ripple"
                    android:padding="@dimen/_12sdp"
                    android:src="@mipmap/ic_back_black" />

                <customviews.BoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:text="@string/describe_your_profession"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/_24ssp" />

                <customviews.LightTextView
                    android:id="@+id/txtCountCharacterDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:text="@string/_1024_characters"
                    android:textColor="@color/greyTextColor"
                    android:textSize="@dimen/_12ssp" />

                <customviews.MaterialEditText
                    android:id="@+id/edDescriptionProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:gravity="left"
                    android:hint="@string/enter"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLength="1024"
                    android:maxLines="5"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/_14ssp"
                    app:met_floatingLabel="none"
                    app:met_floatingLabelAnimating="true"
                    app:met_floatingLabelTextColor="@color/black_color"
                    app:met_hideUnderline="true"
                    app:met_textColor="@color/white_color"
                    app:met_textColorHint="@color/hintColorText" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@color/colorLine" />

            </LinearLayout>

            <customviews.MediumTextView
                android:id="@+id/txtNextDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_36sdp"
                android:layout_marginTop="@dimen/_240sdp"
                android:background="@drawable/mentee_ripple"
                android:elevation="@dimen/_3"
                android:paddingBottom="@dimen/_8sdp"
                android:paddingLeft="@dimen/_24sdp"
                android:paddingRight="@dimen/_24sdp"
                android:paddingTop="@dimen/_8sdp"
                android:text="@string/next"
                android:textAllCaps="true"
                android:textColor="@color/black_color"
                android:textSize="@dimen/_14ssp" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>