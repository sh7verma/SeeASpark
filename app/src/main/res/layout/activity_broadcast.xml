<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/llMainBroadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:background="@drawable/broadcast_background"
        android:orientation="vertical">

        <customviews.BoldTextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center"
            android:paddingTop="@dimen/_36sdp"
            android:text="Personal Concierge"
            android:textColor="@color/black_color"
            android:textSize="@dimen/_14ssp" />

        <customviews.MediumTextView
            android:id="@+id/txtMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/_16sdp"
            android:text="@string/lorem_ipsum"
            android:textColor="@color/black_color"
            android:textSize="@dimen/_12ssp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/greyLine" />

        <customviews.BoldTextView
            android:id="@+id/txtOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center"
            android:padding="@dimen/_16sdp"
            android:text="OK"
            android:textColor="@color/black_color"
            android:textSize="@dimen/_14ssp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_bell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-24dp"
        android:padding="@dimen/_8sdp"
        android:background="@drawable/orange_circle"
        android:src="@mipmap/broadcast_bell" />

</RelativeLayout>
