<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_24sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:background="@drawable/signup_gradient"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBackSkills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/transparent_ripple"
                android:padding="@dimen/_12sdp"
                android:src="@mipmap/ic_back_black" />

            <customviews.BoldTextView
                android:id="@+id/txtUserType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@color/black_color"
                android:textSize="@dimen/_14ssp" />

        </LinearLayout>

        <customviews.BoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:paddingBottom="@dimen/_16sdp"
            android:text="@string/select_your_nskills"
            android:textColor="@color/black_color"
            android:textSize="@dimen/_24ssp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <customviews.FlowLayout
                android:id="@+id/flSkills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:gravity="left"
                android:paddingBottom="@dimen/_36sdp" />
        </ScrollView>

    </LinearLayout>

    <customviews.MediumTextView
        android:id="@+id/txtNextSkills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_36sdp"
        android:background="@drawable/mentee_ripple"
        android:elevation="@dimen/_3"
        android:paddingBottom="@dimen/_8sdp"
        android:paddingLeft="@dimen/_24sdp"
        android:paddingRight="@dimen/_24sdp"
        android:paddingTop="@dimen/_8sdp"
        android:text="@string/next"
        android:textAllCaps="true"
        android:textColor="@color/black_color"
        android:textSize="@dimen/_14ssp" />

</RelativeLayout>
