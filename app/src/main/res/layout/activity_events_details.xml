<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llMainEventsParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:orientation="vertical">

    <customviews.ScrollViewX
        android:id="@+id/svViewEvent"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:visibility="gone"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgEventDetail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_240sdp"
                android:background="@drawable/background_gradient" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_240sdp"
                android:alpha=".1"
                android:background="@color/black_color" />

            <LinearLayout
                android:id="@+id/llMainEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_180sdp"
                android:background="@drawable/white_short_profile_background"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_24sdp"
                android:paddingRight="@dimen/_24sdp"
                android:paddingTop="@dimen/_24sdp">

                <customviews.BoldTextView
                    android:id="@+id/txtTitleEvents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_8sdp"
                    android:text="The talk big ideas"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/_16ssp" />

                <customviews.MediumTextView
                    android:id="@+id/txtLocationEvents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_location_green"
                    android:drawablePadding="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:text="Southren"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/_12ssp" />

                <customviews.MediumTextView
                    android:id="@+id/txtTimeEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_time_green"
                    android:drawablePadding="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_16sdp"
                    android:text="Southren"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/_12ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/_16sdp">

                    <LinearLayout
                        android:id="@+id/llGoingEvents"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/white_ripple"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgPeopleEvents1"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp" />

                        <ImageView
                            android:id="@+id/imgPeopleEvents2"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="-20dp" />

                        <ImageView
                            android:id="@+id/imgPeopleEvents3"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="-20dp" />

                        <customviews.MediumTextView
                            android:id="@+id/txtGoingCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_12sdp"
                            android:text="+42 Going"
                            android:textAllCaps="true"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>

                    <customviews.MediumTextView
                        android:id="@+id/txtInterestedEvents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/default_interested"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_8sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:text="@string/interested"
                        android:textAllCaps="true"
                        android:textColor="@color/greyLine"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/greyLine" />

                <customviews.LightTextView
                    android:id="@+id/txtDescEvents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_8sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:text="@string/lorem_ipsum"
                    android:textColor="@color/greyTextColor"
                    android:textSize="@dimen/_12ssp" />

                <customviews.MediumTextView
                    android:id="@+id/txtEventLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_ripple"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:text="www.google.com"
                    android:textColor="@color/link_color"
                    android:textSize="@dimen/_14ssp" />

            </LinearLayout>

        </RelativeLayout>
    </customviews.ScrollViewX>

    <include layout="@layout/custom_toolbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/llBottomEvents"
        android:layout_marginLeft="@dimen/_24sdp"
        android:layout_marginRight="@dimen/_24sdp"
        android:background="@color/greyLine" />

    <LinearLayout
        android:id="@+id/llBottomEvents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_24sdp"
        android:paddingRight="@dimen/_24sdp">

        <RelativeLayout
            android:id="@+id/llLikesEvents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/white_ripple"
            android:gravity="center_vertical">

            <com.like.LikeButton
                android:id="@+id/imgLikeEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-22dp"
                app:icon_size="@dimen/_20sdp"
                app:icon_type="heart"
                app:like_drawable="@mipmap/ic_heart_red"
                app:liked="false"
                app:unlike_drawable="@mipmap/ic_heart" />

            <customviews.MediumTextView
                android:id="@+id/txtLikeCountEvents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_26sdp"
                android:text="0 LIKES"
                android:textColor="@color/black_color"
                android:textSize="@dimen/_10ssp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llCommentsEvents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/white_ripple"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_comments" />

            <customviews.MediumTextView
                android:id="@+id/txtCommentCountEvents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_8sdp"
                android:text="0 COMMENTS"
                android:textColor="@color/black_color"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>