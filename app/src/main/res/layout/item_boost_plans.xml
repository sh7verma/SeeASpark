<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_140sdp"
    android:layout_marginTop="@dimen/_16sdp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/_120sdp"
        android:layout_height="match_parent"
        android:background="@drawable/boost_gradient_rectangle"
        android:gravity="center_horizontal|bottom"
        android:orientation="vertical">

        <customviews.BoldTextView
            android:id="@+id/txtBoostPlanCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="@color/white_color"
            android:textSize="@dimen/_24ssp" />

        <customviews.LightTextView
            android:id="@+id/txtPlanType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_3sdp"
            android:paddingTop="@dimen/_3sdp"
            android:text="BOOSTS"
            android:textColor="@color/white_color"
            android:textSize="@dimen/_12ssp" />

        <customviews.MediumTextView
            android:id="@+id/txtBoostPlanCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_12sdp"
            android:text="5"
            android:textColor="@color/white_color"
            android:textSize="@dimen/_14ssp" />

        <customviews.MediumTextView
            android:id="@+id/txtBuyNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:background="@drawable/gradient_round_corner"
            android:gravity="center"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:text="@string/buy_now"
            android:textAllCaps="true"
            android:textColor="@color/white_color"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>
</LinearLayout>