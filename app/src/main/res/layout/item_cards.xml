<?xml version="1.0" encoding="utf-8"?>

<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swlCard"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_130sdp"
    android:layout_marginTop="@dimen/_12sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:tag="@string/handshake">

        <View
            android:layout_width="@dimen/_16sdp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/llHandshake"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="0"
            android:background="@drawable/handshake_background"
            android:gravity="center"
            android:orientation="vertical">

            <customviews.MediumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_handshake_black"
                android:text="@string/handshake"
                android:textAllCaps="true"
                android:textColor="@color/black_color"
                android:textSize="@dimen/_14ssp" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/_16sdp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:tag="@string/pass">

        <View
            android:layout_width="@dimen/_16sdp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/llPass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="0"
            android:background="@drawable/pass_background"
            android:gravity="center">

            <customviews.MediumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_pass"
                android:gravity="center"
                android:text="@string/pass"
                android:textAllCaps="true"
                android:textColor="@color/white_color"
                android:textSize="@dimen/_14ssp" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/_16sdp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:tag="Hover">

        <View
            android:layout_width="@dimen/_16sdp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/llCard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/card_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgAvatarCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_8sdp"
                    android:src="@mipmap/ic_avatar_1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <customviews.BoldTextView
                        android:id="@+id/txtNameCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingRight="@dimen/_8sdp"
                        android:text="Victor Martin"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/_14ssp" />

                    <customviews.MediumTextView
                        android:id="@+id/txtProfessionCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingRight="@dimen/_8sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:text="Physician"
                        android:textColor="@color/darkGreyText"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>

            </LinearLayout>

            <customviews.BoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_8sdp"
                android:text="@string/skills"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_8sdp"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:paddingTop="@dimen/_3sdp">

                <customviews.MediumTextView
                    android:id="@+id/txtSkillCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:background="@drawable/skill_card_outer"
                    android:padding="@dimen/_5sdp"
                    android:text="Lorim"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/_12ssp" />

                <customviews.MediumTextView
                    android:id="@+id/txtSkillCountCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/skill_card_outer"
                    android:padding="@dimen/_5sdp"
                    android:text="Lorim"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="@dimen/_16sdp"
            android:layout_height="match_parent" />

    </LinearLayout>

</com.daimajia.swipe.SwipeLayout>
