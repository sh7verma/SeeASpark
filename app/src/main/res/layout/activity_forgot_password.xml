<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llMain"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:background="@drawable/signup_gradient"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgBackForgot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transparent_ripple"
                    android:padding="@dimen/_12sdp"
                    android:src="@mipmap/ic_back_black" />

                <customviews.BoldTextView
                    android:id="@+id/txtForgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:textAllCaps="true"
                    android:text="@string/forgot_password"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/_18ssp" />

                <customviews.MediumTextView
                    android:id="@+id/txtForgotPasswordHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:text="@string/enter_your_email_below_to_receive_your_reset_password_instruction"
                    android:textColor="@color/hint_color_light"
                    android:textSize="@dimen/_12ssp" />

                <customviews.MaterialEditText
                    android:id="@+id/edEmailForgot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:gravity="left"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:maxLength="@integer/email_max"
                    android:maxLines="1"
                    android:textSize="@dimen/_14ssp"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelAnimating="true"
                    app:met_floatingLabelText="@string/email"
                    app:met_floatingLabelTextColor="@color/black_color"
                    app:met_hideUnderline="true"
                    app:met_textColor="@color/white_color"
                    app:met_textColorHint="@color/white_color" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@color/colorLine" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_230sdp"
                android:orientation="horizontal">

                <customviews.MediumTextView
                    android:id="@+id/txtReset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_36sdp"
                    android:background="@drawable/mentee_ripple"
                    android:elevation="@dimen/_3"
                    android:paddingBottom="@dimen/_8sdp"
                    android:paddingLeft="@dimen/_24sdp"
                    android:paddingRight="@dimen/_24sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:text="@string/reset"
                    android:textAllCaps="true"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/_14ssp" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>